<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igdev_dep_board.Resources.Components.HyperLink"
             xmlns:local="clr-namespace:Igdev_dep_board"
            VerticalOptions="Center"
            Padding="2,0"
                     x:Name="Stack"
                     TranslationY="2">

        <local:HyperlinkLabel Text="{Binding Text}" FontFamily="FiraSans-SemiBold" Url="{Binding Url}"  HorizontalOptions="Center" x:Name="Label"/>
        <BoxView Color="{StaticResource MainColor}" Margin="0, 0, 0, 0" HeightRequest="2" HorizontalOptions="Fill" CornerRadius="100" x:Name="BoxView"/>

</VerticalStackLayout>
